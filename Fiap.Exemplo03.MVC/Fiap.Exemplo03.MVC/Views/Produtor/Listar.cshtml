@model List<Fiap.Exemplo03.MVC.Models.Produtor>
@{
    ViewBag.Title = "Listar";
}

<h2>Listar Produtores</h2>

<table class="table table-hover">
    <thead>
        <th>Nome</th>
        <th>Limite</th>
        <th>Data de Cadastro</th>
        <th>Certificado</th>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Nome</td>
                <td>@p.Limite</td>
                <td>@p.DataCadastro.ToShortDateString()</td>
                <td>@(p.Certificado?"Sim":"Não")</td>
            </tr>
        }
    </tbody>
</table>

